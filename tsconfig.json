{
  "compilerOptions": {
    "target": "es2017",
    "moduleResolution": "node",
    "lib": ["es2017", "dom"],
    "module": "commonjs",
    "declaration": true,
    "outDir": "./lib",
    "strict": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "declarationMap": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "prototype"]
}
